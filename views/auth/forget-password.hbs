<div class='container-fluid'>
  <div class='row'>
    <div class='col-lg-4 col-md-6 col-sm-12 offset-lg-3 offset-md-2'>
      <h4 class='text-center text-muted mt-4'>Reset Password</h4>
      <form
        action='/auth/forget-password'
        method='POST'
        class='forgetPass-form p-3'
      >
        <input type='hidden' name='_csrf' value='{{csrfToken}}' />
        <div class='form-group'>
          <label for='email'>Enter Your Email Address :</label>
          <input
            type='text'
            name='email'
            id='email'
            class='form-control mt-2'
          />
        </div>
        <button class='btn btn-primary mt-2'>Send Password</button>
      </form>
    </div>
  </div>
</div>