    <script>
        const ce = document.querySelector( '#description' );
        if(ce){
              ClassicEditor
        .create( ce,{
            toolbar: [ 'heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote' ],
