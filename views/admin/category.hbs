
<div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-5 col-xm-6 px-3 py-3">
                {{>_dashboard-panel-left}}
            </div>
            <div class="col-lg-9 col-md-8 col-sm-7 col-xm-6 px-3 py-3">
              <h4 class="text-center text-muted"> <strong>Add Category</strong></h4>
              <form action="/categories" method="POST" id="categoryForm">
              <div class="form-group">
                <label for="categories">Category Name:</label>
                <input type="text" name="categories" id="categories" class="form-control mt-2">
                  <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" class="btn btn-primary mt-2" value="Add Category">
              </div>
              </form>
              <div class="allCatToShow mt-2">
                <h4 class="text-center text-muted my-3">All Category List</h4>
                <table class="table table-hover table-sm">
                  <thead>
                    <tr>
                      <th scope="col">Category Name</th>
                      <th scope="col">Delete</th>
                    </tr>
                  </thead>
                    <tbody class="catTD">
                     
                    </tbody>
                </table>
              </div>
            </div>
        </div>
    
</div>